class animal(val classe: String, 
             val genero: Char,
             val habitat: String,
             val dieta: String, 
             val idade: Int,
             val voa: Boolean){
    
    fun Atacar(bravo: Boolean){
        if(bravo == true){
        println("animal atacando")    
        }else{
            println("animal de boa, suavão")
            
        }
        
        
    }
    
}
//métodos - Comportamentos da nossa classe, que nossos objetos receberão
//eles são declarados usando funçoes
